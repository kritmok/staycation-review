<%- include("../partials/header") %>

<div class="index-hero">
  <h2>Welcome to Staycation Review!</h2>
  <p>Browse reviews now to decide where to go next!</p>
  <p>Or add your own suggested hotel.</p>
  <a href="hotels/new"><button class="new-btn">Add Hotel</button></a>
</div>

<div class="container-fluid cards">
  <div class="row">
    <% hotels.forEach((hotel) => { %>
      <div class="col-md-4 card-space ">
        <div class="card">
          <img src="<%=hotel.image%>" alt="" class="card-img-top img-fluid hotel-img">
          <div class="card-body">
            <div class="card-title"><b><%= hotel.title %></b></div>
            <p class="card-text"><%= hotel.description.substring(0,100) %>...</p>
            <p class="card-text">
              <small class="text-muted"><%= hotel.location%></small>
            </p>
            <a class="btn btn-primary" href="/hotels/<%=hotel._id%>">Read reviews</a>
          </div>
        </div>
      </div>
      <% }); %> 
  </div>
</div>





